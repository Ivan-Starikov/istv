---
import Layout from "../layouts/Layout.astro";
import Navigation from "@components/Navigation.astro";
---

<Layout title="Blog">
  <main>
    <div class="nav">
      <Navigation />
    </div>
  </main>
</Layout>

<style>
  body {
    border: 18px solid blue;
    height: 100vh;
  }

  main {
    height: 100%;
  }

  .nav {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 16px;
  }
</style>
